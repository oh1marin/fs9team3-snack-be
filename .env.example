PORT=3001
NODE_ENV=development

# PostgreSQL 연결 문자열
# 예시) postgresql://USER:PASSWORD@HOST:5432/DB_NAME?schema=public
DATABASE_URL=postgresql://username:password@localhost:5432/snack_db?schema=public

# JWT 비밀키 (운영 환경에서는 반드시 강력한 문자열로 교체)
JWT_SECRET=change-me-access-token-secret
JWT_REFRESH_SECRET=change-me-refresh-token-secret

# 프론트엔드 도메인 (콤마로 여러 개 지정 가능)
CORS_ORIGIN=http://localhost:3000,http://localhost:4000
# HTTPS만 사용할 때 true (기본값: false)
# USE_HTTPS=true

# AWS S3 (필요 시 설정)
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_PUBLIC_BUCKET_NAME=
AWS_PRIVATE_BUCKET_NAME=

# 최고관리자 가입 초대 이메일 (nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
INVITATION_FROM_EMAIL=noreply@yoursite.com
FRONTEND_SIGNUP_URL=http://localhost:3000/signup
