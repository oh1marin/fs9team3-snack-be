generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String
  is_admin     String   @default("N") // Y: 관리자, N: 일반 유저
  create_at    DateTime @default(now())
  updated_at   DateTime @updatedAt

  items             Item[]
  carts             Cart[]
  orders            Order[]
  purchase_histories PurchaseHistory[]

  @@map("users")
}

model Item {
  id            String   @id @default(uuid())
  price         Int
  image         String
  category_main String
  category_sub  String
  count         Int      @default(0)
  user_id       String
  title         String
  link          String?
  create_at     DateTime @default(now())
  updated_at    DateTime @updatedAt

  user          User       @relation(fields: [user_id], references: [id], onDelete: Cascade)
  carts         Cart[]
  order_items   OrderItem[]

  @@map("items")
}

// 장바구니: 사용자별 담은 상품 (id, item_id, user_id, quantity, total_price, created_at, updated_at)
model Cart {
  id          String   @id @default(uuid())
  item_id     String
  user_id     String
  quantity    Int      @default(1)
  total_price Int      @default(0)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  item Item @relation(fields: [item_id], references: [id], onDelete: Cascade)

  @@unique([user_id, item_id])
  @@map("carts")
}

// 구매 요청(주문) = purchase_request 역할. 장바구니에서 구매요청 시 여기에 삽입.
model Order {
  id           String   @id @default(uuid())
  user_id      String
  status       String   @default("pending") // pending, approved, cancelled
  request_date DateTime @default(now())
  total_amount Int      @default(0)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  user             User             @relation(fields: [user_id], references: [id], onDelete: Cascade)
  order_items      OrderItem[]
  purchase_history PurchaseHistory?

  @@map("orders")
}

// 구매 확정 이력 (승인된 주문만 기록). 관리자 승인 시 한 건 insert.
model PurchaseHistory {
  id           String   @id @default(uuid())
  order_id     String   @unique
  user_id      String
  total_amount Int      @default(0)
  approved_at  DateTime @default(now())
  created_at   DateTime @default(now())

  order Order @relation(fields: [order_id], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("purchase_history")
}

model OrderItem {
  id          String   @id @default(uuid())
  order_id    String
  item_id     String
  quantity    Int      @default(1)
  total_price Int      @default(0)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  order Order @relation(fields: [order_id], references: [id], onDelete: Cascade)
  item  Item  @relation(fields: [item_id], references: [id], onDelete: Cascade)

  @@map("order_items")
}